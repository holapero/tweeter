<div class='span4 '>
  <h1>Static#tweeter</h1>
  <%= content_tag :a, "Hey signup for our newsletter!!", :href => "#modal", :class => 'btn', :data => {:toggle => 'modal'} %>
  <%= modal_dialog :id => "modal",
  :header => { :show_close => true, :dismiss => 'modal', :title => 'Modal header' },
  :body   => content_tag(:div),
  :footer => content_tag(:button, 'Save', :class => 'btn') %>  
</div>



<%= form_tag(newsletter_path) do %>
  <%= text_field_tag(:name,"",placeholder: "Name") %>
  <%= email_field_tag(:email,"",placeholder: :Email) %><br />
  <%= submit_tag(:Subscribe!) %>
  <% end %>


